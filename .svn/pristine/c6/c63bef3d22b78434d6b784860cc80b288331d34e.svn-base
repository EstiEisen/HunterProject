<div class="p-5 box-shadow">
  <p class=" bold  black-color">פרטי התהליך</p>
<hr class="style1">
  <div class="row">
    <div class="col-12 col-sm-7 mb-3 mb-sm-0">
      <span class="light-grey-color">שם המעסיק:</span>
      <span class="colortitle">{{ process.employer.name }}</span>
    </div>
    <div class="col-12 col-sm-5 mb-3 mb-sm-0">
      <span class="light-grey-color">ח.פ:</span>
      <span class="colortitle">{{ process.employer.businessNumber }}</span>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-12 col-sm-7 mb-3 mb-sm-0">
      <span class="light-grey-color">שם התהליך:</span>
      <span class="colortitle">{{ process.addToProcessName }}</span>
    </div>
    <div class="col-12 col-sm-5">
      <span class="light-grey-color">מספר התהליך:</span>
      <span class="colortitle">{{ process.id }}</span>
    </div>
  </div>
  <p class="mt-5 bold black-color">פרטי התשלומים</p>
  <hr class="style1">
  <div class="row align-items-center">
    <div class="col-12">
      <span class="light-grey-color ">סכום לתשלום:</span>
      <span class="green-color">{{ process.details.paymentSum | commatize}} &#8362;</span>
     <a class="pointer" routerLink="../payment-table">
      <span class="align-top mr-1 ml-2 f-16 blue-color"  matTooltip="לתצוגת פירוט התשלומים לפי קופות" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" >לפירוט מלא:</span>
      <i class="fa fa-chevron-left light-grey-color"></i>
    </a> 
    </div>
    <!-- <a class="col-5 pointer" routerLink="../payment-table">
          <span class="align-top mr-1 ml-2 f-16 blue-color"  matTooltip="לתצוגת פירוט התשלומים לפי קופות" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" >לפירוט מלא:</span>
      <i class="fa fa-chevron-left light-grey-color"></i>
    </a>  -->
  </div>
  <div class="row align-items-center mt-4">
    <div class="col-12">
      <span class="light-grey-color">מספר רשומות:</span>
      <span class="orange-color">{{ process.details.recordNumber }}</span>
       <span class="align-top mr-1 ml-2 f-16 blue-color pointer"  
    matTooltip="לתצוגת פירוט התשלומים לפי עובד" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'"
     routerLink="../employee-payments">לפירוט מלא:</span>
      <i class="fa fa-chevron-left light-grey-color"></i> 
    </div>
     <!-- <div class="col-5 pointer" routerLink="../employee-payments">
        <span class="align-top mr-1 ml-2 f-16 blue-color pointer"  
    matTooltip="לתצוגת פירוט התשלומים לפי עובד" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'"
     routerLink="../employee-payments">לפירוט מלא:</span>
      <i class="fa fa-chevron-left light-grey-color"></i>
    </div> -->
  </div>

 <div class="row align-items-center mt-4" *ngIf="mode === 'transmission'&&!process.NegativeProcess">
 
    <div class="col-12">
      <span class="light-grey-color">תאריך תשלום (ערך):</span>
      <span class="yellow-color">{{ process.details.dateToPay }}</span>
       <span *ngIf="!send" class="align-top ml-2 mr-1 f-16 blue-color pointer"     matTooltip="לשינוי תאריך ערך לכל התהליך" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" (click)="clickOpenDialog()"> לעידכון תאריך:</span>
      <i  *ngIf="!send" class="fa fa-chevron-left light-grey-color"></i> 
    </div>
    <!-- <div class="pointer"  (click)="clickOpenDialog()">
     <span *ngIf="!send" class="align-top ml-2 mr-1 f-16 blue-color pointer"     matTooltip="לשינוי תאריך ערך לכל התהליך" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" (click)="clickOpenDialog()"> לעידכון תאריך:</span>
      <i  *ngIf="!send" class="fa fa-chevron-left light-grey-color"></i>
    </div>  -->
  </div>

  <div class="row align-items-center mt-4" *ngIf="mode === 'transmission'&&process.NegativeProcess">
 
    <div class="col-12">
      <span class="light-grey-color">פרטי חשבון לזיכוי:</span>
      <span class="yellow-color" dir="ltr" *ngIf="Employerbank&&Employerbank.bank&&!Employerbank.differentAccounts">{{ Employerbank.bank?.id +" - "+ Employerbank.id +" - "+Employerbank.number }}</span>
            <span class="yellow-color" dir="ltr" *ngIf="Employerbank&&Employerbank.bank&&Employerbank.differentAccounts">קיימים חשבונות בנק שונים בתהליך </span>
      <span *ngIf="!send" class="align-top ml-2 mr-1 f-16 blue-color pointer"     matTooltip="לשינוי חשבון" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" (click)="clickOpenBankAccountEmployerDialog()"> לעידכון חשבון:</span>
      <i  *ngIf="!send" class="fa fa-chevron-left light-grey-color"></i> 
    </div>
    <!-- <div class="pointer"  (click)="clickOpenDialog()">
     <span *ngIf="!send" class="align-top ml-2 mr-1 f-16 blue-color pointer"     matTooltip="לשינוי תאריך ערך לכל התהליך" matTooltipPosition="above"
       [matTooltipClass]="'mytooltip'" (click)="clickOpenDialog()"> לעידכון תאריך:</span>
      <i  *ngIf="!send" class="fa fa-chevron-left light-grey-color"></i>
    </div>  -->
  </div>

 
</div>
