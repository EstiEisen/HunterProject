/* You can add global styles to this file, and also import other style files */

@font-face {
  src: url('./assets/fonts/Heebo-Regular.ttf');
  font-family: Heebo;
}

@font-face {
  src: url('./assets/fonts/Heebo-Medium.ttf');
  font-family: HeeboMedium;
}

html, body {
  height: 100%;
}

body {
  direction: rtl;
  text-align: right;
}

* {
  font-family: Heebo;
}

a:focus {
  text-decoration: none;
}

th, td {
  text-align: right !important;
}

ul {
  margin-bottom: 0;
  margin-top: 0;
  padding: 0;
  list-style-type: none;
}

input[type=file] {
  display: none;
}

textarea {
  height: 150px;
}

label {
  margin: 0;
}

a {
  color: #0275d8 !important;
  text-decoration: none;
}

a:hover{
  text-decoration: none;
  cursor: pointer;
}

/*--- Custom ---*/

.relative {
  position: relative;
}

.btn, .pointer {
  cursor: pointer;
}

.fa {
  font-family: FontAwesome;
}

.bold {
  font-weight: bold;
}

.underline {
  text-decoration: underline;
}

.ltr {
  direction: ltr;
}

.w-100p {
  width: 100px;
}

.title {
  font-size: 34px;
  color: #356cb3;
  text-align: center;
}

.green-color {
  color: #56af57;
}

.blue-color {
  color: #356cb3;
}

.yellow-color {
  color: #ebc372;
}

.grey-color {
  color: #a4a4a3;
}

.light-grey-color {
  color: #c4c4c4;
}

.sub-title-container {
  display: flex;
  align-items: center;
  padding-bottom: 15px;
}

.sub-title-container > .sub-title {
  margin: 0;
  padding: 0 8px;
}

.sub-title-container > .horizontal-line {
  height: 3px;
  flex-grow: 1;
  background-color: #e5e3e5;
}

.file-label {
  display: flex;
  border: 1px solid #e1dde1;
}

.file-label-text {
  flex-grow: 1;
  display: flex;
  align-items: center;
  padding-right: 8px;
}

.file-label-button {
  color: #fff;
}

.table-action-button {
  padding: 5px 10px;
  border: 1px solid #ddd;
  background: #fff;
  font-size: 16px;
  cursor: pointer;
}

.form-actions {
  padding-top: 12px;
  border-top: 1px solid #C2C2C2;
}

.word-break {
  word-break: break-all;
}

.page-item.active .page-link {
  color: #fff !important;
}

.clear-selection {
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 15px 8px;
  font-size: 16px;
  text-align: center;
  font-weight: bold;
  cursor: pointer;
}

.link {
  color: #0275d8;
}

.icon-lg {
  height: auto;
  width: 75px;
}

.f-12 {
  font-size: 12px !important;
}

.f-14 {
  font-size: 14px !important;
}

.f-16 {
  font-size: 16px !important;
}

.f-18 {
  font-size: 18px !important;
}

.box-shadow {
  box-shadow: 0 3px 11px 4px #999;
}

/*--- Select 2 ---*/

.select2-container, select2-selection__rendered {
  text-align: right;
}

.select2-container {
  min-width: 250px !important;
}

.select2-selection__rendered {
  color: #949494 !important;
}

.select2-container--default .select2-selection--single {
  margin-top: 2px;
  border: none !important;
  border-bottom: 1px solid #949494 !important;
  border-radius: 0 !important;
  background-color: transparent !important;
  outline: 0;
}

.select2-search--dropdown {
  direction: rtl;
}

.select2-container--default .select2-selection--single .select2-selection__arrow {
  left: 0;
}

/*--- Bootstrap RTL ---*/

.input-group .form-control:not(:last-child) {
  border-radius: 0 0.25rem 0.25rem 0 !important;
}

.form-control + .input-group-addon:not(:first-child) {
  border-right: 0;
  border-left: 1px solid rgba(0, 0, 0, 0.15) !important;
  border-radius: 0.25rem 0 0 0.25rem !important;
}

.dropdown-item {
  text-align: right;
}


/*--- Material RTL ---*/

.mat-form-field, .mat-select-panel .mat-optgroup-label, .mat-select-panel .mat-option {
  text-align: right !important;
}

.mat-input-element {
  text-align: right;
}

.mat-dialog-container {
  direction: rtl;
}

.mat-dialog-title {
  border-bottom: 1px solid #ccc;
}

.mat-dialog-actions {
  border-top: 1px solid #ccc;
}

.mat-form-field-type-mat-select .mat-form-field-label {
  width: 100% !important;
}

.mat-form-field-can-float.mat-form-field-should-float .mat-form-field-label {
  width: 133% !important;
}

.mat-form-field-prefix {
  margin-left: 8px;
}

.mat-slide-toggle-content, .mat-checkbox-layout .mat-checkbox-label {
  margin-right: 8px;
  font-size: 16px;
}

@media (min-width: 992px) {
  .navbar-toggler {
    display: none;
  }

  .navbar-collapse {
    display: flex !important;
    flex-basis: initial !important;
  }

  .navbar-nav {
    flex-direction: row;
  }

  .container-wide {
    width: 75%;
    margin: 0 auto;
  }
}

@media (max-width: 992px) {
  .container {
    width: 880px;
    max-width: 100%;
  }
}
