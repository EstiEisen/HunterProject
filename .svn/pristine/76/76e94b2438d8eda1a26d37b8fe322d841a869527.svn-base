<div *ngIf="this.dialogStep === 0">
  <button class="dialog-close mb-3" mat-dialog-close>
    <i class="fa fa-times"></i>
  </button>

  <!--<p mat-dialog-title>{{ feedback.employee.firstName + ' ' + feedback.employee.lastName }}</p>-->
  <p class="h4">{{ feedback.employee.firstName + ' ' + feedback.employee.lastName }}</p>
  <hr>
  <p class="h6">
    <span>שכר:</span>
    <span>{{ feedback.Salary }} &#8362;</span>
  </p>
  <div mat-dialog-content>
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>סעיף</th>
        <th>סכום</th>
        <th>סטאטוס</th>
        <th>סוג שגיאה</th>
        <th>פרטים</th>
      </tr>
      </thead>
      <tbody>
      <tr *ngFor="let error of feedback.recordStatus">
        <!--<td>{{ error.clause }}</td>-->
        <!--<td>{{ error.SumTotal }}</td>-->
        <!--<td>{{ error.type }}</td>-->
        <!--<td>{{ error.details }}</td>-->
        <td>{{ error.Key }}</td>
        <td>{{ error.Value.sum }}</td>
        <td>{{ error.Value.recordStatusText }}</td>
        <td>{{ error.Value.payErrorTypeText }}</td>
        <td>{{ error.Value.remark }}</td>
      </tr>
      </tbody>
    </table>

    <div class="row text-center mt-5">
      <div class="col">
        <button class="btn btn-primary mb-1" (click)="setDialogStep(1)">פניה לקופה</button>
      </div>
      <div class="col">
        <button class="btn btn-primary" (click)="setDialogStep(2)">פניה לסוכן</button>
      </div>
      <div class="col">
        <button class="btn btn-primary" (click)="setDialogStep(3)">פניה לעובד</button>
      </div>
    </div>

    <!--<div class="d-flex">-->
      <!--<mat-form-field class="w-75 ml-3">-->
        <!--<textarea matInput placeholder="הערות"></textarea>-->
      <!--</mat-form-field>-->
      <!--<div class="w-25 d-flex justify-content-center align-items-center flex-column">-->
      <!--<button class="btn btn-primary mb-1">פניה לקופה</button>-->
      <!--<button class="btn btn-primary">פניה לסוכן</button>-->
      <!--</div>-->
    <!--</div>-->


  </div>
</div>

<app-feedback-employee-application *ngIf="this.dialogStep === 1" (closeApplication)="setDialogStep($event)" [headerText]="'פניה לקופה'" [feedback]="this.feedback"></app-feedback-employee-application>
<app-feedback-employee-application *ngIf="this.dialogStep === 2" (closeApplication)="setDialogStep($event)" [headerText]="'פניה לסוכן'"></app-feedback-employee-application>
<app-feedback-employee-application *ngIf="this.dialogStep === 3" (closeApplication)="setDialogStep($event)" [headerText]="'פניה לעובד'"></app-feedback-employee-application>
