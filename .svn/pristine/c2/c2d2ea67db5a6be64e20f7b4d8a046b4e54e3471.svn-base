<div id="pageContainer" class="container-fluid p-0">
  <header>
    <div id="topHeader" class="d-flex align-items-center justify-content-end">
      <i class="fa fa-sign-out ml-3" (click)="logout()"></i>
    </div>
    <div id="mainMenu">
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item" *ngFor="let link of menuLinks" [ngClass]="{ 'dropdown': link.subMenuLinks }">
              <a class="menu-link" [routerLink]="['/', link.url]" *ngIf="!link.subMenuLinks">
                <img [src]="'/assets/img/menu/' + link.label + '.svg'" [attr.alt]="link.label">
                <span class="blue-color">{{ link.label }}</span>
              </a> 

             <div [matMenuTriggerFor]="subMenu" class="menu-link" *ngIf="link.subMenuLinks">
               <img [src]="'/assets/img/menu/' + link.label + '.svg'" [attr.alt]="link.label">
               <span>{{ link.label }}</span>
                <mat-menu #subMenu yPosition="above" [overlapTrigger]="false">
                  <button mat-menu-item class="dropdown-item" *ngFor="let subLink of link.subMenuLinks"
                  [routerLink]="'/' + link.url + '/' + subLink.url" >{{ subLink.label }}</button>
                </mat-menu>
              </div>
              <div class="arrow-down" *ngIf="link.url === activeUrl"></div>
            </li>
          </ul>
        </div>
        <a class="navbar-brand" routerLink="">
          <img src="/assets/img/logo.svg" class="logo" alt="לוגו של סמארטי">
        </a>
      </nav>
    </div>
  </header>
  <div id="content">
      <router-outlet></router-outlet>
  </div>
</div>
