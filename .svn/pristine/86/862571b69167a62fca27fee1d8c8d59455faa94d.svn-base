/* You can add global styles to this file, and also import other style files */

@font-face {
  src: url('./assets/fonts/Arimo-Regular.ttf');
  font-family: Arimo;
}

html, body {
  height: 100%;
}

body {
  direction: rtl;
}

* {
  font-family: Arimo;
}

a:focus {
  text-decoration: none;
}

th, td {
  text-align: right !important;
}

ul {
  margin-bottom: 0;
  margin-top: 0;
  padding: 0;
  list-style-type: none;
}

input[type=file] {
  display: none;
}

textarea {
  height: 150px;
}

label {
  margin: 0;
}

/*--- Custom ---*/

.btn, .pointer {
  cursor: pointer;
  font-family: Arimo;
}

.fa {
  font-family: FontAwesome;
}

.bold {
  font-weight: bold;
}

.ltr {
  direction: ltr;
}

.title {
  font-size: 40px;
  color: #356cb3;
  text-align: center;
}

.blue {
  color: #356cb3;
}

.grey-color {
  color: #a4a4a3;
}

.sub-title-container {
  display: flex;
  align-items: center;
  padding-bottom: 15px;
}

.sub-title-container > .sub-title {
  margin: 0;
  padding: 0 8px;
}

.sub-title-container > .horizontal-line {
  height: 3px;
  flex-grow: 1;
  background-color: #e5e3e5;
}

.file-label {
  display: flex;
  border: 1px solid #e1dde1;
}

.file-label-text {
  flex-grow: 1;
  display: flex;
  align-items: center;
  padding-right: 8px;
}

.file-label-button {
  color: #fff;
}

.table-action-button {
  padding: 5px 10px;
  border: 1px solid #ddd;
  background: #fff;
  font-size: 16px;
  cursor: pointer;
}

.form-actions {
  padding-top: 12px;
  border-top: 1px solid #C2C2C2;
}

/*--- Select 2 ---*/

.select2-container, select2-selection__rendered {
  text-align: right;
}

.select2-container {
  width: 250px !important;
}

.select2-selection__rendered {
  color: #949494 !important;
}

.select2-container--default .select2-selection--single {
  margin-top: 2px;
  border: none !important;
  border-bottom: 1px solid #949494 !important;
  border-radius: 0 !important;
  outline: 0;
}

.select2-search--dropdown {
  direction: rtl;
}

.select2-container--default .select2-selection--single .select2-selection__arrow {
  left: 0;
}

/*--- Bootstrap RTL ---*/

.input-group .form-control:not(:last-child) {
  border-radius: 0 0.25rem 0.25rem 0 !important;
}

.form-control + .input-group-addon:not(:first-child) {
  border-right: 0;
  border-left: 1px solid rgba(0, 0, 0, 0.15) !important;
  border-radius: 0.25rem 0 0 0.25rem !important;
}

.dropdown-item {
  text-align: right;
}


/*--- Material RTL ---*/

.mat-form-field, .mat-select-panel .mat-optgroup-label, .mat-select-panel .mat-option {
  text-align: right !important;
}

.mat-input-element {
  text-align: right;
}

.mat-dialog-container {
  direction: rtl;
}

.mat-dialog-title {
  border-bottom: 1px solid #ccc;
}

.mat-dialog-actions {
  border-top: 1px solid #ccc;
}

.mat-form-field-type-mat-select .mat-form-field-label {
  width: 100% !important;
}

.mat-form-field-can-float.mat-form-field-should-float .mat-form-field-label {
  width: 133% !important;
}

.mat-form-field-prefix {
  margin-left: 8px;
}

.mat-slide-toggle-content, .mat-checkbox-layout .mat-checkbox-label {
  margin-right: 8px;
  font-size: 16px;
}

@media (max-width: 992px) {
  .container {
    width: 880px;
    max-width: 100%;
  }
}
