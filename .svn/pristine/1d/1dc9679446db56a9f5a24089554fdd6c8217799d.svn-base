              <input matInput [matDatepicker]="picker" placeholder="בחר חודש" [(value)]="selectedDate" (dateChange)="setDate($event.value)">
              <mat-datepicker-toggle matSuffix [for]="picker"></mat-datepicker-toggle>
              <mat-datepicker touchUi="true" [startView]="'year'" #picker></mat-datepicker>
              <mat-hint align="start">לפי חודש שכר</mat-hint>
            </mat-form-field>  -->
   
        </section>
        <section id="stats">
          <!--<mat-form-field>-->
          <!--<mat-select [(ngModel)]="year">-->
          <!--<mat-option [value="year"]>{{ year }}</mat-option>-->
          <!--<mat-option [value]="year - 1">{{ year - 1 }}</mat-option>-->
          <!--</mat-select>-->
          <!--</mat-form-field>-->
          <!--<mat-form-field>-->
          <!--<  mat-option *ngFor="let month of months">{{ month }}</mat-option>-->
          <!--</mat-select>-->
          <!--</mat-form-field>-->
          <div class="row">
            <div class="col box-container">
              <div class="box">
                <img src="/assets/img/employees.svg" class="mb-2" alt="סהכ עובדים">
                <p>סה"כ עובדים</p>
                <!--<p>127</p>-->
                <P>{{countsData.numberEmp  }}</P>
              </div>
            </div>
            <div class="col box-container">
              <div class="box">
                <img src="/assets/img/messages.svg" class="mb-2" alt="מספר פניות פתוחות">
                <p>מספר פניות פתוחות</p>
                <!-- <p>({{countsData.totalNumberRef}}) {{countsData.numberRef}}</p> -->
                <p> {{countsData.numberRef}}</p> 
              </div>
            </div>
            <div class="col box-container">
              <div class="box">
                <img src="/assets/img/coins.svg" class="mb-2" alt="כספים ששולמו">
                <p>כספים ששולמו</p>
                <p>{{countsData.paidMoney | currency:'ILS':'&#8362;'}}</p>
              </div>
            </div>
            <div class="col box-container">
              <div class="box">
                <img src="/assets/img/file.svg" class="mb-2" alt="מס' קבצים ששודרו">
                <p>מס' קבצים ששודרו</p>
                <p>{{countsData.numberSentFiles}}</p>
              </div>
            </div>
          </div>
        </section>
        <section id="feedback" class="mb-3">
          <p class="h3 mb-5">היזונים חוזרים</p>
          <div class="d-flex">
            <div class="w-50">
              <app-app-feedback-graph-only 
               [graphOnly]="true"></app-app-feedback-graph-only>
            </div>
            <div id="doughnutGraphContainer" class="w-50 relative">

              <div class="row">
              <a routerLink="/process/new"  class="btn btn-success btn-xl box-shadow--4dp"><span class="pluscss">+</span>
                  טעינת תהליך חדש</a>
              </div>
                  <div class="row primary">
              <a (click)="GetNewProcess(false)" class="btn btn-primary1 btn-xl box-shadow--4dp"><i class="fa fa-eye eyecss" ></i>
                  תהליכים אחרונים </a>
              </div>
                   <div class="row">
                     <p class="pcss">שם לב! קיימים תהליכים שטרם שודרו</p>
                   </div>
                    <div class="row">
                     <p class="pcss">לצפייה בתהליכים <a class="acss" (click)="GetNewProcess(true)">לחץ כאן </a></p>
                   </div>
      
          </div>
          </div>

        </section>
      </div>
</div>
