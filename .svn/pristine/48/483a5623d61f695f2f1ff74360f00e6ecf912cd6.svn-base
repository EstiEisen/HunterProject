#processIntro #detailsOptionFormats {
  border-right: 1px solid #0f72b6;
}

#processGeneralInfo {
  padding: 20px 10px;
  background-color: #0f72b6;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  flex-wrap: wrap;
}

#processGeneralInfo li {
  padding: 0 10px;
  font-size: 18px;
  border-left: 1px solid #fafafa;
}

#processGeneralInfo li:last-child {
  border-left: none;
}

#processGeneralInfo li > p {
  margin: 0;
}

#processIntro .details-format-option {
  padding: 8px 0;
  border: 1px solid #0f72b6;
  border-radius: 12px;
  cursor: pointer;
  transition: 0.2s;
}

#processIntro .details-format-option:hover {
  background: #0f72b6;
  color: #fff;
}

#processInfo {
  padding-bottom: 30px;
  border-bottom: 1px solid #c9c7c7;
}

#processInfo > div {
  background-color: #fff;
}

#processInfo > div > .border-line {
  height: 3px;
  margin: 0 auto;
}

#processInfo > div > .border-line-top {
  width: 40px;
  margin-bottom: 20px;
}

#processInfo > div > .border-line-bottom {
  width: 183px;
  margin-top: 20px;
}

#processInfo > div:nth-child(1) > .border-line {
  background-color: #e52a46;
}

#processInfo > div:nth-child(2) > .border-line {
  background-color: #46ba55;
}

#processInfo > div:nth-child(3) > .border-line {
  background-color: #18b5ef;
}

#processInfo > div:nth-child(4) > .border-line {
  background-color: #f09007;
}

#processInfo > div > p {
  font-size: 18px;
}

#processInfo > div > span, #processInFO > div > i {
  font-size: 24px;
}

#processInfo > div:nth-child(1) > span, #processInfo > div:nth-child(1) > i {
  color: #e52a46;
}

#processInfo > div:nth-child(2) > span {
  color: #46ba55;
}

#processInfo > div:nth-child(3) > span {
  color: #18b5ef;
}

#processInfo > div:nth-child(4) > span {
  color: #f09007;
}
