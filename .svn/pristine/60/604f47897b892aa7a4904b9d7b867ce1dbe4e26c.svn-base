#processUploadForm {
  background-color: #fff;
}

.border-line {
  height: 5px;
  width: 250px;
  margin: 0 auto 40px auto;
  background-color: #0f72b6;
}

form.locked {
  pointer-events: none;
}

.file-type-option {
  padding: 20px 0 10px 0;
  background-color: #f3f1f3;
  border: 2px solid #e1dde1;
  color: #acaaac;
  cursor: pointer;
}

.progress {
  height: 35px;
}

.progress-bar {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  color: #000;
}

.file-type-option.selected {
  border-color: #3058aa;
}

.file-type-option > i {
  margin-bottom: 10px;
  font-size: 40px;
}

.file-type-option > p {
  margin: 0;
}

.file-label-text {
  color: #bdbbbd;
}

#successMessageContainer .h1 {
  color: #1378b6;
}

#successMessageContainer .h6:first-of-type {
  color: #b4e8b7;
}

#successMessageContainer > i {
  margin: 20px 0;
  font-size: 80px;
  color: #0275d8;
}

#successMessageContainer button {
  padding: 8px 12px;
  font-size: 16px;
  cursor: pointer;
}
