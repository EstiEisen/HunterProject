<!--</button>-->

<i class="fa fa-arrow-right pointer mb-3" (click)="onCloseClicked()"  aria-hidden="true"></i>

<p class="h3">{{this.headerText}}</p>
<hr>
<div class="row">
  <div class="col">
    <mat-form-field dir="rtl">
      <mat-select multiple placeholder="בחר איש קשר" (selectionChange)="selectedContactsIds = $event.value">
        <mat-option value="0">כל אנשי הקשר</mat-option>
        <mat-option *ngFor="let contact of contacts" [value]="contact.id">
        {{ contact.firstName + ' ' + contact.lastName }}
        </mat-option>
      </mat-select>
    </mat-form-field>

  </div>
</div>

<div class="row">
  <div class="col-4">
    <mat-form-field>
      <mat-select placeholder="בחר קובץ מערכת" (selectionChange)="selectedFileId = $event.value">
        <!--<mat-option *ngFor="let file of files" [value]="file.id">-->
          <!--{{ file.text }}-->
        <!--</mat-option>-->
        <mat-option [value]="codeFile">{{codeFile}}</mat-option>
      </mat-select>
    </mat-form-field>
  </div>
  <div class="col">



    <label class="w-100 file-label">
      <div class="file-label-text pr-3">
        <i class="fa fa-upload ml-2"></i>
        <span>{{  uplodedFile.name ? (uplodedFile.name.length>30) ? (uplodedFile.name | slice:0:30)+'..': uplodedFile.name : 'בחר קובץ להעלאה'}}</span>
      </div>
      <span class="btn btn-primary file-label-button">בחר קובץ</span>
      <input type="file" (change)="uplodedFile = $event.target.files['0']">
    </label>



  </div>
</div>


<div class="d-flex">
  <mat-form-field class="w-75 ml-3">
    <textarea matInput placeholder="הערות" [(ngModel)]="comments"></textarea>
  </mat-form-field>
  <div class="w-25 d-flex justify-content-end align-items-center flex-column">
  <button class="btn btn-primary mb-1" (click)="onSubmit()">שלח פניה</button>
  </div>

</div>
