<div class="data-table dialog  container-fluid">
<i class="fa fa-arrow-right pointer mb-3" (click)="onCloseClicked()"  aria-hidden="true"></i>

<p class="h3">פרטי הפניה שנשלחה</p>
<hr>
<div class="row">
  <div class="col-md-12">
    <span>שם הקובץ:</span>
    <span>{{ data.feedback.fileName }} </span>
  </div>
   
 
</div>
<div class="row">
    <div class="col-md-6">
    <span>נושא הפניה:</span>
    <span>{{ data.feedback.applicationsSubjectText }} &#8362;</span>
  </div>
    <div class="col-md-6">
    <span>סטטוס  הפניה:</span>
    <span>{{ data.feedback.ApplicationStatusText }} &#8362;</span>
  </div>
</div>
<div class="row">
   <div class="col-md-6">
    <span>חברה מנהלת:</span>
    <span>{{ data.feedback.manufacturer.name }} </span>
  </div>
   <div class="col-md-6">
    <span>סוג מוצר:</span>
    <span>{{getEnumLabel(data.feedback.productType,'productType')}}</span>
  </div>
</div>
<div class="row">
   <div class="col-md-6">
    <span>תאריך יצירת הפניה:</span>
    <span>{{data.feedback.createdAtApplications|date: 'dd/MM/yyyy'}}</span>
  </div>
     <div class="col-md-6">
    <span>סכום:</span>
    <span>{{ data.feedback.sumFile }} &#8362;</span>
  </div>
</div>
  <div *ngIf="data.application.SentToManufacturer">
 <div class="row"  *ngFor="let item of data.application.contacts">
    <div class="col-md-3">
    <span>שם נמען:</span>
    <span>{{ item.lastName+' '+item.lastName }}</span>
  </div>
  <div class="col-md-3">
    <span>מייל:</span>
    <span>{{ item.email }}</span>
  </div>
 </div>
</div>  
<textarea class="col-md-12" matInput placeholder="הערות" [(ngModel)]="data.feedback.Comments" [readonly]="true"></textarea>
  

<p class="h3">פניה חוזרת</p>
<hr>
<div class="row">
  <div class="row text-center mt-5">

     <div class="radio radio-primary">
            <input type="radio" name="radio1" id="radio2"  [ngModel]="headerText" value="manufacturer" 
            (click)="ChengeradioAplication($event.target.value)" >
            <label for="radio2">
             קופה 
            </label>
        </div>
           <div class="radio radio-primary">
            <input type="radio" name="radio1" id="radio1" [ngModel]="headerText" value="agent" (click)="ChengeradioAplication($event.target .value)">
            <label for="radio1">
               סוכן
            </label>
        </div>
      


     </div>
</div>
<div class="row">
  <div class="col">
    <mat-form-field dir="rtl">
      <mat-select multiple placeholder="בחר איש קשר" (selectionChange)="selectedContactIds = $event.value">
        <mat-option value="0">כל אנשי הקשר</mat-option>
        <mat-option *ngFor="let contact of data.contacts" [value]="contact.id">
        {{ contact.firstName + ' ' + contact.lastName }}
        </mat-option>
      </mat-select>
    </mat-form-field>

  </div>
</div>

<div class="row">
  <div class="col-4">
    <mat-form-field dir="rtl">
      <mat-select multiple placeholder="בחר קובץ מערכת" (selectionChange)="selectedFileIds = $event.value">
        <mat-option value="0">כל הקבצים</mat-option>
        <mat-option *ngFor="let file of data.files" [value]="file.id">
          {{ file.fileName }}
        </mat-option>
      </mat-select>
    </mat-form-field>
  </div>

  <div class="col">
    <label class="w-70 file-label">
      <div class="file-label-text pr-3">
        <i class="fa fa-upload ml-2"></i>
        <span>{{  uploadedFile&&uploadedFile.name ? (uploadedFile.name.length>30) ? (uploadedFile.name | slice:0:30)+'..': uploadedFile.name : 'בחר קובץ להעלאה'}}</span>
      </div>
      <span class="btn btn-primary file-label-button">בחר קובץ</span>
      <input type="file" (change)="uploadedFile = $event.target.files['0']">
    </label>



  </div>
</div>


<div class="d-flex">
  <mat-form-field class="w-75 ml-3">
    <textarea matInput placeholder="הערות" [(ngModel)]="comments"></textarea>
  </mat-form-field>
  <div class="w-25 d-flex justify-content-end align-items-center flex-column">
  <button class="btn btn-primary mb-1" (click)="onSubmit()">שלח פניה</button>
  </div>

</div>
</div>