<mat-horizontal-stepper [linear]="true" #stepper>
  <mat-step label="העלאת קובץ שכר">
      <app-process-upload-form (stepChange)="setStep($event)"  [process]="process" *ngIf="stepper.selectedIndex === 0"></app-process-upload-form>
  </mat-step>
  <mat-step label="תשלום">
      <app-process-payment (stepChange)="setStep($event)" [process]="process" [isNew]="isNew" *ngIf="stepper.selectedIndex === 1"></app-process-payment>
  </mat-step>
  <mat-step label="שידור נתונים">
    <app-process-transmission (stepChange)="setStep($event)" [process]="process" *ngIf="stepper.selectedIndex === 2"></app-process-transmission>
  </mat-step>
</mat-horizontal-stepper>
