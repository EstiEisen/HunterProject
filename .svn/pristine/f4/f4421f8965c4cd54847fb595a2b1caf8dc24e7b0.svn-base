<button class="dialog-close mb-3" mat-dialog-close>
  <i class="fa fa-times"></i>
</button>
<p class="h3">פניה לקופה</p>
<hr>


<div class="d-flex">
  <div class="w-75 ml-3">
    <p class="mb-0">
      חברה מנהלת:
      {{this.feedback.manufacturer.name}}
    </p>
    <p class="mb-0">
      סכום קובץ:
      {{this.feedback.sumFile}}
    </p>
    <p class="mb-0">
      שם הקובץ:
      {{this.feedback.fileName}}
    </p>
    <p class="mb-0">
      סוג שגיאה:

    </p>
  </div>
  <div class="w-25 d-flex justify-content-center align-items-center flex-column">
    <mat-form-field dir="rtl">
      <mat-select multiple placeholder="בחר איש קשר" (selectionChange)="setContacts($event.value)">
        <mat-option value="full">כל אנשי הקשר</mat-option>
        <mat-option *ngFor="let contact of contacts" [value]="contact.id">
          {{ contact.firstName + ' ' + contact.lastName }}
        </mat-option>
      </mat-select>
    </mat-form-field>

    <mat-form-field>
      <mat-select placeholder="בחר קובץ מערכת">
        <mat-option *ngFor="let file of files" [value]="file.id">
          {{ file.text }}
        </mat-option>
      </mat-select>
    </mat-form-field>


    <label class="w-100 file-label">
      <div class="file-label-text pr-3">
        <i class="fa fa-upload ml-2"></i>
        <span>{{ file2.name ? file2.name : 'בחר קובץ'}}</span>
      </div>
      <span class="btn btn-primary file-label-button">בחר קובץ</span>
      <input type="file" (change)="file2 = $event.target.files[0]">
    </label>


  </div>
</div>

<div class="d-flex">
  <mat-form-field class="w-75 ml-3">
    <textarea matInput placeholder="הערות"></textarea>
  </mat-form-field>
  <div class="w-25 d-flex justify-content-end align-items-center flex-column">
    <button class="btn btn-primary mb-1">שלח פניה</button>
  </div>

</div>
