<app-process-header [mode]="'transmission'" [process]="process"></app-process-header>
<div class="text-center mt-3 mb-3">
  <button id="startTransmissionButton" class="btn btn-success">שדר</button>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
        <label>
          <input type="checkbox" [(ngModel)]="checkBoxValue" [checked]="checkBoxValue">
          <span></span>
        </label>
      </th>
      <th>חברה מנהלת</th>
      <th>קופה בשכר</th>
      <th>סוג מוצר</th>
      <th>סוג תשלום</th>
      <th>מס' חשבון/צ'ק</th>
      <th>תאריך תשלום</th>
      <th>סכום</th>
      <th>הערות</th>
      <th>סטטוס</th>
    </tr>
  </thead>
  <tbody>
    <tr *ngFor="let payment of payments">
      <td>
        <label>
          <input type="checkbox" [checked]="checkBoxValue" class="checkbox style-0">
          <span></span>
        </label>
      </td>
      <td>{{payment.manufacturer.name}}</td>
      <td><i class="fa fa-info-circle"></i></td>
      <td>{{pay.labels.productType[pay.productType[payment.productType]]}}</td>
      <td><i class="fa fa-pencil"></i> {{pay.labels.KindPay[pay.KindPay[payment.KindPay]]}}</td>
      <td><i class="fa fa-pencil"></i> {{payment.employer.bankAccountNumber}}</td>
      <td><i class="fa fa-pencil"></i> {{payment.PaymentDate | date: 'dd/MM/yyyy'}}</td>
      <td>{{payment.sumFile}}</td>
      <td><i class="fa fa-comment"></i></td>
      <td>{{pay.labels.SentToSafeBoxes[pay.SentToSafeBoxes[payment.StatusSafeBoxes]]}}</td>
    </tr>
  </tbody> 
</table> 
